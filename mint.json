{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Locale Sync",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "api": {
    "auth": {
      "method": "key",
      "name": "Repository-token"
    },
    "playground": {
      "mode": "show"
    },
    "baseUrl": "https://api.localesync.com"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#F465F6",
    "light": "#F465F6",
    "dark": "#2C1434",
    "background": {
      "dark": "#131112"
    },
    "anchors": {
      "from": "#F465F6",
      "to": "#DCB9F0"
    }
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:hi@localesync.com"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://app.localesync.com"
  },
  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction",
        "config/config-file",
        "config/translation-fallback"
      ]
    },
    {
      "group": "SDK's",
      "pages": ["sdk/commands", "sdk/flutter", "sdk/typescript"]
    },
    {
      "group": "API Documentation",
      "pages": ["api-reference/introduction"]
    },
    {
      "group": "Endpoint Examples",
      "pages": [
        "api-reference/endpoint/download-translations",
        "api-reference/endpoint/upload-translations"
      ]
    }
  ]
